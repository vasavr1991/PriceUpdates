<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - PriceUpdates.Web</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100" style="font-family: 'Inter', sans-serif;">
<header>
	<nav class="navbar bg-white border-bottom py-2">
		<div class="container justify-content-center">
			<a class="navbar-brand fw-600 text-dark p-0" asp-controller="Price" asp-action="Index">
				<i class="bi bi-graph-up me-2 text-primary"></i>Price Tracker
			</a>
			<div class="badge bg-success bg-opacity-10 text-success fs-7 ms-3">
				<i class="bi bi-circle-fill fs-9 me-1"></i><span id="connectionStatus">Connecting</span>
			</div>
		</div>
	</nav>
</header>

<main class=" d-flex align-items-center justify-content-center">
	@RenderBody()
</main>

<footer class="bg-light mt-auto py-2">
	<div class="container text-center fs-14 text-secondary">
		&copy; 2025 PriceUpdates.Web • <a href="#" class="text-secondary text-decoration-none">Privacy</a>
	</div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>