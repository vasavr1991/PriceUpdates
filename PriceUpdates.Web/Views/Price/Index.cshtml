@model List<PriceUpdates.Common.Models.InstrumentModel>

@{
	ViewData["Title"] = "Live Prices";
}

<div class="container py-5" style="max-width: 600px;">
	<div class="mb-3 text-center">
		<h2 class="fw-600 text-dark mb-1 fs-5">Live Market Prices</h2>
		<div class="fs-14 text-muted">Real-time updates</div>
	</div>

	<div class="card  shadow-sm">
		<div class="card-body p-0">
			<table class="table table-borderless align-middle mb-0">
				<thead class="bg-gray-50">
					<tr>
						<th class="text-uppercase fs-13 text-secondary fw-500 ps-3">Symbol</th>
						<th class="text-uppercase fs-13 text-secondary fw-500">Price</th>
						<th class="text-uppercase fs-13 text-secondary fw-500 pe-3 text-end"></th>
					</tr>
				</thead>
				<tbody id="priceTable">
					@foreach (var symbol in Model)
					{
						<tr id="row-@symbol.Symbol" class="border-top">
							<td class="ps-3 fw-500 text-dark fs-14">@symbol.Symbol.ToUpper()</td>
							<td id="price-@symbol.Symbol" class="price-cell">
								<div class="d-flex align-items-center gap-2">
									<div class="spinner-border spinner-border-sm text-primary opacity-50" role="status"></div>
									<span class="text-muted fs-14">–</span>
								</div>
							</td>
							<td class="pe-3 text-end">
								<button onclick="updatePrice('@symbol.Symbol')"
										class="btn btn-sm btn-link text-primary p-0">
									<i class="bi bi-arrow-repeat fs-13"></i>
								</button>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

<script>

</script>